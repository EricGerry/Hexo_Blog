#footer
  position: absolute
  bottom: 0
  margin-bottom: 10px
  width: 100%
  color: $color-meta
  vertical-align: top
  text-align: center
  font-size: 14px
  font-weight: 500

  ul
    margin: 0
    padding: 0
    list-style: none

  li
    display: inline-block
    margin-right: 15px
    border-right: 1px solid $color-border
    vertical-align: middle

    a
      margin-right: 15px

  li:last-child
    margin-right: 0
    border-right: 0

    a
      margin-right: 0

  a
    color: $color-meta
    text-decoration: underline
    background-image: none

  a:hover
    color: lighten($color-meta, 20%)

  .footer-left
    vertical-align: middle

@media (min-width: 367px)
  #footer
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    align-items: center
    align-content: center
    margin: auto

    .footer-left
      align-self: flex-start
      flex-basis: auto
      flex-grow: 1
      flex-shrink: 1
      margin-right: 20px
      text-overflow: ellipsis
      overflow: hidden
      white-space: nowrap

    .footer-right
      align-self: flex-end
      flex-basis: auto
      flex-grow: 1
      flex-shrink: 1
